{
  "main": "srcjs/index.js",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/jquery": "^3.3.31",
    "@types/lodash": "^4.14.149",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "1.18.2",
    "ts-jest": "^24.1.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "build": "yarn typescript-check && parcel build -d inst/assets/js -o shinyjster.js --no-minify srcjs/index.ts",
    "watch": "yarn typescript-check && parcel run -d inst/assets/js -o shinyjster.js srcjs/index.ts",
    "test": "jest",
    "lint": "eslint --fix --ext .ts srcjs",
    "lint-check": "eslint --ext .ts srcjs",
    "typescript-check": "tsc --noEmit srcjs/**/*.ts",
    "type-check": "type-coverage --detail --at-least 95",
    "checks": "yarn typescript-check && yarn type-check && yarn lint-check"
  },
  "dependencies": {
    "core-js": "3",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "tsc --noEmit",
      "git add"
    ]
  }
}
