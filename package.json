{
  "name": "shinyjester",
  "version": "1.0.0",
  "main": "srcjs/index.js",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "checks": "yarn typescript-check; yarn lint-check",
    "lint": "eslint --fix --ext .ts srcjs",
    "lint-check": "eslint --ext .ts srcjs",
    "typescript-check": "tsc --noEmit srcjs/index.ts",
    "build": "yarn typscript-check; parcel build -d inst -o shinyjester.js srcjs/index.ts",
    "watch": "yarn typscript-check; parcel run -d inst -o shinyjester.js srcjs/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "tsc --noEmit",
      "git add"
    ]
  }
}
